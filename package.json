{
  "name": "@andrei-zhaleznichenka/cpu-monitor-poc",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "monitor-agent",
    "monitor-agent-api",
    "monitor-client"
  ],
  "scripts": {
    "api": "yarn workspace @andrei-zhaleznichenka/cpu-monitor-agent-api",
    "agent": "yarn workspace @andrei-zhaleznichenka/cpu-monitor-agent",
    "client": "yarn workspace @andrei-zhaleznichenka/cpu-monitor-client",
    "test": "yarn agent test && yarn client test",
    "format": "yarn prettier --write .",
    "lint": "yarn tslint --project . --fix"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn format",
      "yarn lint"
    ],
    "*.{json,yaml,md}": [
      "yarn format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "devDependencies": {
    "@types/jest": "26.0.3",
    "husky": "4.3.8",
    "lint-staged": "10.5.1",
    "nodemon": "2.0.7",
    "prettier": "2.0.5",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "tslint-react": "5.0.0",
    "tslint": "6.1.3",
    "typescript": "4.1.3"
  }
}
